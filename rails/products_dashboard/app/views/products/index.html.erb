<h2>Listing products</h2>
<button><a href="/comments">All Comments</a></button>
<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th> Category </th>
        <th></th>
    </tr>
    <% for product in @products %>
    <tr> 
        <td><%=product.name%></td>
        <td><%=product.description%></td>
        <td>$<%=product.pricing%></td>
        <td> <%=product.category.name%></td>
        <td><a href="/products/<%=product.id%>">Show</a> | <a href="/products/<%=product.id%>/edit">Edit</a> | <a href="products/<%=product.id%>" data-method='delete'>Delete</a> </td>
    </tr>
    <% end %>
</table>
<br>
<a href="/products/new">New Product</a>
